<header id="desktop-header" aria-label="Navegación principal">
  <img src="{{ 'tennis-ball.png' | asset_url }}" alt="Tennis ball logo">
  <nav class="nav-menu" aria-label="Menú principal">
    <ul>
      <li><a class="active-menu" href="#">Inicio</a></li>
      <li><a href="#">Acerca de nosotros</a></li>
      <li><a href="#">Historia</a></li>
      <li><a href="#">Contacto</a></li>
    </ul>
  </nav>
  <nav class="language-nav" aria-label="Selección de idioma">
    <ul>
      <li><a href="#" hreflang="es" lang="es">ES</a></li>
      <li><a href="#" hreflang="en" lang="en">EN</a></li>
    </ul>
  </nav>
</header>

<header id="header-sm" aria-label="Navegación principal">
  <div class="menu-toggle" aria-label="Abrir menú" aria-expanded="false">
    {% render 'icon-hamburger' %}
  </div>
  <div class="modal" id="mobile-menu">
    <nav class="nav-menu" aria-label="Menú principal">
      <ul>
        <li><a class="active-menu" href="#">Inicio</a></li>
        <li><a href="#">Acerca de nosotros</a></li>
        <li><a href="#">Historia</a></li>
        <li><a href="#">Contacto</a></li>
      </ul>
    </nav>
    <nav class="language-nav" aria-label="Selección de idioma">
      <ul>
        <li><a href="#" hreflang="es" lang="es">ES</a></li>
        <li><a href="#" hreflang="en" lang="en">EN</a></li>
      </ul>
    </nav>
  </div>
</header>

<script type="text/javascript">
  document.addEventListener('DOMContentLoaded', function() {
    const menuToggle = document.getElementById('menu-toggle');
    const mobileMenu = document.getElementById('mobile-menu');
    if (menuToggle && mobileMenu) {
      menuToggle.addEventListener('click', function() {
        mobileMenu.classList.toggle('menu-open');
        document.body.style.overflow = mobileMenu.classList.contains('menu-open') ? 'hidden' : '';
      });
    }
  });
</script>