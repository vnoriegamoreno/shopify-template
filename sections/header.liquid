<header id="header-sm">
  <img src="{{ 'tennis-ball.png' | asset_url }}" alt="Tennis ball" id="menu-toggle">
  <div class="modal"  id="mobile-menu">
    <nav class="nav-menu">
      <ul>
        <li><a class="active-menu" href="#">Inicio</a></li>
        <li><a href="#">Acerca de nosotros</a></li>
