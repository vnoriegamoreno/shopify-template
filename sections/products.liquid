<section class="products-section" aria-labelledby="products-title">
  <div class="container">
    <header class="products-header">
      <div class="column-empty"></div>
      <span class="tag">TENNIS</span>

      <div class="content">
        <h2 id="products-title" class="title">
          Raquetas.Accesorios.<br>
          Pelotas.
        </h2>

        <div class="description">
          <p>Conoce nuestras raquetas y aprende a jugar Tennis cómo un profesional.</p>
          <div>
            <a href="#history" class="btn-outline" aria-label="Ir a la sección de historia">Historia {% render 'icon-left-arrow' %}</a>
          </div>
        </div>
      </div>
    </header>

    <div class="products-showcase">
      <article class="product-card featured">
        <div class="product-image">
          <img src="{{ 'ball-color-court.png' | asset_url }}" alt="Pelota de tennis sobre superficie verde">
        </div>
        <div class="product-content">
          <h3>Nuestras<br><strong>Raquetas</strong></h3>
          <p>Conoce nuestras raquetas y aprende a jugar Tennis cómo un profesional.</p>
          <div class="indicators">
            <button class="indicator active" aria-label="Ir a slide 1"></button>
            <button class="indicator" aria-label="Ir a slide 2"></button>
            <button class="indicator" aria-label="Ir a slide 3"></button>
            <button class="indicator" aria-label="Ir a slide 4"></button>
          </div>
          <div class="controls">
            <button class="control prev" aria-label="Anterior producto">
              <span class="prev-arrow"></span>
            </button>
            <button class="control next" aria-label="Siguiente producto">
              <span class="next-arrow"></span>
            </button>
          </div>
        </div>
      </article>

      <div class="product-grid">
        <article class="product-card">
          <div class="number">
            <span>1</span>
          </div>
          <img src="{{ 'racket.png' | asset_url }}" alt="Raqueta de tennis profesional modelo 1">
        </article>
        <article class="product-card">
          <div class="number">
            <span>2</span>
          </div>
          <img src="{{ 'racket.png' | asset_url }}" alt="Raqueta de tennis profesional modelo 2">
        </article>
        <article class="product-card">
          <div class="number">
            <span>3</span>
          </div>
          <img src="{{ 'racket.png' | asset_url }}" alt="Raqueta de tennis profesional modelo 3">
        </article>
      </div>
    </div>
  </div>
</section>
