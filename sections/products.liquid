<section class="products-section" aria-labelledby="products-title">
  <div class="container">
    <header class="products-header">
      <div class="column-empty"></div>
      <span class="tag">TENNIS</span>

      <div class="content">
        <h2 id="products-title" class="title">
          Raquetas.Accesorios.<br>
          Pelotas.
        </h2>

        <div class="description">
          <p>Conoce nuestras raquetas y aprende a jugar Tennis cómo un profesional.</p>
          <div>
            <a href="#history" class="btn-outline" aria-label="Ir a la sección de historia">Historia {% render 'icon-left-arrow' %}</a>
          </div>
        </div>
      </div>
    </header>

    <div class="products-showcase">
      <article class="product-card featured">
        <div class="product-image">
          <img src="tennis-ball.jpg" alt="Pelota de tennis sobre superficie verde">
        </div>
        <div class="product-content">
          <h3>
            Nuestras<br>
            Raquetas
          </h3>
          <p>Conoce nuestras raquetas y aprende a jugar Tennis cómo un profesional.</p>
        </div>
        <div class="controls">
          <button class="prev" aria-label="Anterior producto">
            <svg aria-hidden="true">
              ...
            </svg>
          </button>
          <button class="next" aria-label="Siguiente producto">
            <svg aria-hidden="true">
              ...
            </svg>
          </button>
        </div>
        <div class="indicators">
          <button class="indicator active" aria-label="Ir a slide 1"></button>
          <button class="indicator" aria-label="Ir a slide 2"></button>
          <button class="indicator" aria-label="Ir a slide 3"></button>
        </div>
      </article>

      <div class="product-grid">
        <article class="product-card">
          <span class="number">1</span>
          <img src="racket-1.png" alt="Raqueta de tennis profesional modelo 1">
        </article>
        <article class="product-card">
          <span class="number">2</span>
          <img src="racket-2.png" alt="Raqueta de tennis profesional modelo 2">
        </article>
        <article class="product-card">
          <span class="number">3</span>
          <img src="racket-3.png" alt="Raqueta de tennis profesional modelo 3">
        </article>
      </div>
    </div>
  </div>
</section>
